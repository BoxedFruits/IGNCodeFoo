<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


    <TextView
            android:text="TItle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_title"
            app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#151719" android:fontFamily="sans-serif-black" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="28dp" android:typeface="sans"/>

    <ImageView
            android:adjustViewBounds="true"
            android:paddingRight="6dp"
            android:layout_width="fill_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_thumb"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_title"
            app:layout_constraintStart_toStartOf="@+id/textView_title"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_height="0dp"/>

    <TextView
            android:text="Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Description"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" android:lineSpacingExtra="8sp"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"

            app:layout_constraintTop_toBottomOf="@+id/imgCorners2"
            app:layout_constraintStart_toStartOf="@+id/imageView_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1" app:layout_constraintHorizontal_bias="0.0" android:textAlignment="viewStart"
            android:layout_marginEnd="4dp"/>
    <ImageView
            android:id="@+id/imgCorners"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:src="@drawable/corners"
            app:layout_constraintTop_toTopOf="@+id/imageView_thumb"
            app:layout_constraintStart_toStartOf="@+id/imageView_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_thumb" app:layout_constraintVertical_bias="0.727"
            app:layout_constraintEnd_toEndOf="@+id/imageView_thumb"/>
    <ImageView
            android:id="@+id/imgCorners2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:src="@drawable/corners2"
            app:layout_constraintTop_toTopOf="@+id/imageView_thumb"
            app:layout_constraintStart_toStartOf="@+id/imageView_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_thumb" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/imageView_thumb"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_typeOfContent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Description"
            android:textColor="#B7B3B3" android:textStyle="bold"
            android:textSize="18sp" android:fontFamily="sans-serif-black"
            android:paddingLeft="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView_Description"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Comments" app:layout_constraintStart_toEndOf="@+id/tv_typeOfContent"
            android:layout_marginStart="172dp"
            android:textColor="#B7B3B3"
            android:textSize="18sp" android:lineSpacingExtra="8sp"
            android:textStyle="bold" android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toTopOf="@+id/tv_typeOfContent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_typeOfContent" tools:text="Comments"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_CommentCount"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/tv_Comments" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.294" android:fontFamily="sans-serif-black" android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" tools:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Comments"
            app:layout_constraintTop_toTopOf="@+id/tv_Comments"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.965"
            app:layout_constraintStart_toStartOf="@+id/textView_title" app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold" android:fontFamily="sans-serif-black" android:textColor="@color/colorPrimary"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/imgCorners2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgCorners2"
            app:layout_constraintStart_toStartOf="@+id/imageView_thumb"
            app:layout_constraintEnd_toEndOf="@+id/imageView_thumb"
            android:id="@+id/play_button"
    />
</android.support.constraint.ConstraintLayout>